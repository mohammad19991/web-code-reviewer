{
  "unitTests": {
    "description": "Unit tests for prompts and services",
    "tests": [
      "prompts.test.js",
      "services.test.js"
    ],
    "timeout": 10000,
    "environment": {
      "NODE_ENV": "test",
      "GITHUB_TOKEN": "test-token",
      "OPENAI_API_KEY": "test-openai-key",
      "CLAUDE_API_KEY": "test-claude-key"
    }
  },
  "coverage": {
    "targets": [
      "src/prompts/*.js",
      "src/services/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/node_modules/**"
    ]
  }
}
